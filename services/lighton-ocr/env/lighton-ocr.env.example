# LightOnOCR shim configuration
LIGHTON_OCR_HOST=127.0.0.1
LIGHTON_OCR_PORT=9155

# Model ID (used for /v1/models and the subprocess runner)
# LIGHTON_OCR_MODEL_ID=lightonai/LightOnOCR-2-1B

# Option A: proxy to an upstream HTTP server
# LIGHTON_OCR_UPSTREAM_BASE_URL=http://127.0.0.1:9156
# LIGHTON_OCR_UPSTREAM_ENDPOINT=/v1/ocr

# Option B: run a command per request (expects LIGHTON_OCR_OUTPUT_JSON to be written)
# LIGHTON_OCR_RUN_COMMAND=python3 scripts/run_lighton_ocr.py
# LIGHTON_OCR_WORKDIR=/var/lib/lighton-ocr/app

# Subprocess runner settings
# LIGHTON_OCR_MAX_TOKENS=256

# Runtime limits
LIGHTON_OCR_TIMEOUT_SEC=120

# Optional device hints for upstream runtimes
LIGHTON_OCR_DEVICE=auto
