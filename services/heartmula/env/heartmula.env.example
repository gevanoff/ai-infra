# HeartMula environment template
HEARTMULA_MODEL_PATH=/var/lib/heartmula/ckpt
HEARTMULA_OUTPUT_DIR=/var/lib/heartmula/output
# WARNING: binding to 0.0.0.0 exposes the service to the network.
HEARTMULA_HOST=0.0.0.0
HEARTMULA_PORT=9920
HEARTMULA_DEVICE=cuda
HEARTMULA_DTYPE=float16
HEARTMULA_VERSION=3B
# Optional: allowed CIDR(s) to permit to connect to HeartMula port (space-separated list)
HEARTMULA_ALLOWED_CIDRS="10.10.22.0/24"
# PyTorch CUDA memory management
PYTORCH_CUDA_ALLOC_CONF=garbage_collection_threshold:0.8,max_split_size_mb:1024
