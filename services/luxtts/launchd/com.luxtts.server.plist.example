<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key><string>com.luxtts.server</string>

    <key>UserName</key><string>luxtts</string>
    <key>WorkingDirectory</key><string>/var/lib/luxtts</string>

    <key>ProgramArguments</key>
    <array>
      <string>/bin/bash</string>
      <string>-lc</string>
      <string>set -a; source /etc/luxtts/luxtts.env 2&gt;/dev/null || true; set +a; exec /var/lib/luxtts/venv/bin/uvicorn lux_tts_server:app --host "${LUXTTS_HOST:-127.0.0.1}" --port "${LUXTTS_PORT:-9170}"</string>
    </array>

    <key>RunAtLoad</key><true/>
    <key>KeepAlive</key><true/>

    <key>EnvironmentVariables</key>
    <dict>
      <key>HOME</key><string>/var/lib/luxtts</string>
      <key>PYTHONUNBUFFERED</key><string>1</string>
    </dict>

    <key>StandardOutPath</key><string>/var/log/luxtts/luxtts.out.log</string>
    <key>StandardErrorPath</key><string>/var/log/luxtts/luxtts.err.log</string>
  </dict>
</plist>
