# LuxTTS shim configuration
LUXTTS_HOST=127.0.0.1
LUXTTS_PORT=9170
LUXTTS_MODEL=luxtts
LUXTTS_OUTPUT_FORMAT=wav

# Option A: proxy to an upstream server that already speaks OpenAI TTS
# LUXTTS_UPSTREAM_BASE_URL=http://127.0.0.1:9171
# LUXTTS_UPSTREAM_ENDPOINT=/v1/audio/speech

# Option B: run a command per request (expects LUXTTS_OUTPUT_PATH to be written)
# LUXTTS_RUN_COMMAND=python3 scripts/run_luxtts.py
# LUXTTS_WORKDIR=/var/lib/luxtts/app

LUXTTS_TIMEOUT_SEC=120
LUXTTS_DEVICE=auto
