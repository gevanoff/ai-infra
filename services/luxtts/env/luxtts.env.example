# LuxTTS shim configuration
LUXTTS_HOST=0.0.0.0
LUXTTS_PORT=9170
LUXTTS_MODEL=luxtts
LUXTTS_OUTPUT_FORMAT=wav

# READINESS NOTE:
# /readyz returns 503 until you configure ONE of the following options.

# Option A (recommended): proxy to an upstream server that already speaks OpenAI TTS
LUXTTS_UPSTREAM_BASE_URL=http://127.0.0.1:9170
LUXTTS_UPSTREAM_ENDPOINT=/v1/audio/speech

# Option B: run a command per request (writes to LUXTTS_OUTPUT_PATH set per request)
# LUXTTS_RUN_COMMAND=/var/lib/luxtts/venv/bin/python3 /var/lib/luxtts/app/scripts/run_luxtts.py
# LUXTTS_MODEL_ID=YatharthS/LuxTTS
# LUXTTS_PROMPT_AUDIO=/var/lib/luxtts/prompt.wav
# LUXTTS_VOICE=alloy
# LUXTTS_VOICE_MAP_JSON={"alloy":"/var/lib/luxtts/prompt.wav","nova":"/var/lib/luxtts/prompt2.wav"}
# LUXTTS_CPU_THREADS=2
# LUXTTS_RMS=0.01
# LUXTTS_REF_DURATION=0
# LUXTTS_NUM_STEPS=4
# LUXTTS_T_SHIFT=0.9
# LUXTTS_SPEED=1.0
# LUXTTS_RETURN_SMOOTH=false
# LUXTTS_WORKDIR=/var/lib/luxtts/app
# Note: LUXTTS_OUTPUT_PATH is provided per request and points to a temp file;
# this WORKDIR controls the subprocess CWD only.

LUXTTS_TIMEOUT_SEC=120
LUXTTS_DEVICE=auto
