# VibeVoice-ASR shim configuration
VIBEVOICE_ASR_HOST=127.0.0.1
VIBEVOICE_ASR_PORT=9180
VIBEVOICE_ASR_MODEL=vibevoice-asr

# Option A: proxy to an upstream OpenAI-compatible ASR server
# VIBEVOICE_ASR_UPSTREAM_BASE_URL=http://127.0.0.1:9181
# VIBEVOICE_ASR_UPSTREAM_ENDPOINT=/v1/audio/transcriptions

# Option B: run a command per request (expects VIBEVOICE_ASR_OUTPUT_JSON to be written)
# VIBEVOICE_ASR_RUN_COMMAND=python3 scripts/run_vibevoice_asr.py
# VIBEVOICE_ASR_WORKDIR=/var/lib/vibevoice-asr/app

VIBEVOICE_ASR_TIMEOUT_SEC=120
VIBEVOICE_ASR_DEVICE=cuda
