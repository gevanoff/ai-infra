# Qwen3-TTS shim configuration
QWEN3_TTS_HOST=127.0.0.1
QWEN3_TTS_PORT=9175
QWEN3_TTS_MODEL=qwen3-tts
QWEN3_TTS_OUTPUT_FORMAT=wav

# READINESS NOTE:
# /readyz returns 503 until you configure ONE of the following options.

# Option A (recommended): proxy to an upstream server that already speaks OpenAI TTS
QWEN3_TTS_UPSTREAM_BASE_URL=http://127.0.0.1:9175
QWEN3_TTS_UPSTREAM_ENDPOINT=/v1/audio/speech

# Option B: run a command per request (expects QWEN3_TTS_OUTPUT_PATH to be written)
# QWEN3_TTS_RUN_COMMAND=python3 scripts/run_qwen3_tts.py
# QWEN3_TTS_WORKDIR=/var/lib/qwen3-tts/app

QWEN3_TTS_TIMEOUT_SEC=120
QWEN3_TTS_DEVICE=cuda
