# LibreChat runtime environment (.env)
# This file is seeded to: /var/lib/librechat/app/.env

# Server
HOST=0.0.0.0
PORT=3080

# Only expose the custom endpoint(s) defined in librechat.yaml.
# This hides built-in providers (OpenAI/Anthropic/etc) even if their env vars are unset.
ENDPOINTS=custom

# URLs used by LibreChat for generating absolute links
DOMAIN_CLIENT=http://ai2:3080
DOMAIN_SERVER=http://ai2:3080

# Database
MONGO_URI=mongodb://127.0.0.1:27017/LibreChat

# Optional: disable search indexing by default (safe for LAN)
NO_INDEX=true

# If you add a reverse proxy later, update TRUST_PROXY.
TRUST_PROXY=0

# YAML config file (recommended)
CONFIG_PATH=/var/lib/librechat/app/librechat.yaml

# Auth secrets (required for login/session). Install script will generate these if empty.
JWT_SECRET=
JWT_REFRESH_SECRET=
CREDS_KEY=
CREDS_IV=

# Used by librechat.yaml custom endpoint example
GATEWAY_BEARER_TOKEN=

# Image tools via Local AI Gateway (optional; set API key)
IMAGE_GEN_OAI_BASEURL=http://ai2:8800/v1
IMAGE_GEN_OAI_API_KEY=
# Leave IMAGE_GEN_OAI_MODEL empty to allow gateway model:auto defaulting
# IMAGE_GEN_OAI_MODEL=auto
