# Pocket TTS environment
# Copy to /etc/pocket-tts/pocket-tts.env (Linux) or /etc/pocket-tts/pocket-tts.env (macOS)

# Bind address/port for the FastAPI shim
POCKET_TTS_HOST=0.0.0.0
POCKET_TTS_PORT=9940

# Default model/voice hints for the backend
POCKET_TTS_MODEL_NAME=pocket-tts
POCKET_TTS_MODEL_PATH=
POCKET_TTS_VOICE=alba
POCKET_TTS_SAMPLE_RATE=22050

# Backend selection: auto | python | command
POCKET_TTS_BACKEND=auto

# Command backend (used when POCKET_TTS_BACKEND=command or when python import fails)
# Example: POCKET_TTS_COMMAND=pocket-tts
# Optional args to include for every invocation
POCKET_TTS_COMMAND=pocket-tts
POCKET_TTS_COMMAND_ARGS=
POCKET_TTS_COMMAND_TEXT_ARG=--text
POCKET_TTS_COMMAND_OUTPUT_ARG=--output
POCKET_TTS_COMMAND_MODEL_ARG=--model
POCKET_TTS_COMMAND_VOICE_ARG=--voice

# Optional: if the command needs an explicit output format argument
POCKET_TTS_COMMAND_FORMAT_ARG=

# Networking allowlist (space-separated CIDRs) for firewall automation on Linux
POCKET_TTS_ALLOWED_CIDRS="10.10.22.0/24"
